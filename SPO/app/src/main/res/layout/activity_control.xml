<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.chriseze.spo.Control"
    android:background="@color/blue_gray">
    <include layout="@layout/appbar" android:id="@+id/custom_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/custom_toolbar"
        android:id="@+id/relat1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/relative1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/rel1"
                android:background="@drawable/frame_white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linear1">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/offline"
                        android:id="@+id/status1"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_status1"
                        android:textSize="12sp"
                        android:textColor="@color/blue_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon4"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-1"
                        android:textSize="18sp"
                        android:textColor="@color/blue_gray"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:id="@+id/on1"
                        android:text="ON"
                        android:textColor="@color/beautiful_blue"
                        android:textSize="12sp"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:id="@+id/off1"
                        android:text="OFF"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/rel2"
                android:layout_below="@id/rel1"
                android:background="@drawable/frame_white"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linear2">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/offline"
                        android:id="@+id/status2"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_status2"
                        android:textSize="12sp"
                        android:textColor="@color/blue_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon4"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-2"
                        android:textSize="18sp"
                        android:textColor="@color/blue_gray"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:id="@+id/on2"
                        android:text="ON"
                        android:textColor="@color/beautiful_blue"
                        android:textSize="12sp"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:id="@+id/off2"
                        android:text="OFF"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_blue"
            android:id="@+id/view"
            android:layout_below="@id/relative1"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linear4"
            android:layout_below="@id/view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master"
                android:textSize="14sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear4"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:id="@+id/master_button_on"
                android:text="ON"
                android:textColor="@color/blue_gray"
                android:background="@drawable/master_button_white"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:id="@+id/master_button_off"
                android:text="OFF"
                android:textColor="@color/white"
                android:background="@drawable/master_button_red"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"/>

        </LinearLayout>



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lin1">

            <android.support.v7.widget.CardView
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:id="@+id/card_time"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/t_24_hours"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/img_time"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set time"
                        android:layout_below="@id/img_time"
                        android:id="@+id/text_time"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:id="@+id/card_threshold"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icons8_electrical_threshold_50"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/img_threshold"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set limit"
                        android:layout_below="@id/img_threshold"
                        android:id="@+id/text_threshold"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>





</RelativeLayout>
